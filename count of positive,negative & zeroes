//write a program to enter the numbers till user wants and at the end it should display count of positive negative and zeroes
import java.util.*;
public class salary {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
         int j=0;
         int k=0;
         int l=0;
        for (int i = 1; i <= 10; i++) {
            System.out.println("enter a number including positive and negative and zeros");
            int num = sc.nextInt();
           if(num>0){
               j=j+1;

            }
           else if(num<0){
               k=k+1;

           }
           else if(num==0){
               l=l+1;

           }


        }
        System.out.println(j+"positive numbers");
        System.out.println(k+"negative numbers");
        System.out.println(l+"zeros");

    }

}
